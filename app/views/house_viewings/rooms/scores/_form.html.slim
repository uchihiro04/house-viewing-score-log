= form.fields_for :score do |score_fields|
  h2 入力者（名前・ニックネーム）
  = score_fields.text_field :reviewer_name
  - evaluation_items.each do |evaluation_item|
    h2
      = evaluation_item
    .flex
      p = good_evaluation_name(evaluation_item)
      p = bad_evaluation_name(evaluation_item)
    - 5.times do |i|
      = score_fields.label evaluation_item.to_sym, i + 1
      = score_fields.radio_button evaluation_item.to_sym, i + 1
